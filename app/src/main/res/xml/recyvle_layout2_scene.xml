<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/Imag" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/txtQte"
            motion:layout_constraintEnd_toStartOf="@+id/Imag"
            motion:layout_constraintStart_toEndOf="@+id/Imag"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/Imag"
            motion:layout_constraintVertical_bias="0.23"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/Imag"
            motion:layout_constraintHorizontal_bias="0.471"
            android:rotation="360" />
        <Constraint
            android:id="@+id/txtQte"
            motion:layout_constraintEnd_toStartOf="@+id/Imag"
            motion:layout_constraintStart_toEndOf="@+id/Imag"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toTopOf="@+id/Imag"
            motion:layout_constraintVertical_bias="0.23"
            android:layout_marginEnd="8dp"
            motion:layout_constraintTop_toBottomOf="@+id/Imag"
            motion:layout_constraintHorizontal_bias="0.471" />
        <Constraint
            android:id="@+id/cardView"
            motion:layout_constraintEnd_toStartOf="@+id/Imag"
            motion:layout_constraintStart_toEndOf="@+id/Imag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/Imag"
            android:visibility="visible"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintHorizontal_bias="0.23"
            motion:layout_constraintTop_toTopOf="@+id/Imag"
            android:rotationY="360" />
        <Constraint
            android:id="@+id/cardView2"
            motion:layout_constraintEnd_toEndOf="@+id/Imag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/Imag"
            android:visibility="visible"
            motion:layout_constraintVertical_bias="1.0"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintTop_toTopOf="@+id/Imag"
            motion:layout_constraintStart_toStartOf="parent"
            android:rotationY="-360" />
    </ConstraintSet>
</MotionScene>